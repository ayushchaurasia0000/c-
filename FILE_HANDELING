#include<iostream>
#include<fstream>
#include<cstring>
using namespace std;
int main()
{
	fstream ayush;
	ayush.open("this_is_char.txt",ios::app);
	char c[40] ="ayush chaurasia";
    //for(int j=0; j <40;j++ )
   // ayush>>c;
   
	int length= strlen(c);
	for( int i=0 ; i < length;i++)
	{
		ayush.put(c[i]);
		
	}
    ayush.close();
		return 0;
}
